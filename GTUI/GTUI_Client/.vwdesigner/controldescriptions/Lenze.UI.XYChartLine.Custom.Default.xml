<?xml version="1.0" encoding="utf-8"?>
<control version="7.3" spec="1.0" runtimeType="Lenze.UI.XYChartLine" style="Custom.Default" name="Lenze.UI.XYChartLine.Custom.Default">
  <author name="Custom" />
  <title type="text/plain">XYChartLine</title>
  <description type="text/plain">XYChartLine</description>
  <properties>

