    <property displayName="Style" name="style" datatype="String" category="Appearance" isBrowsable="true" editor="HTML5Design.DesignInformation.StylePropertyEditor" refreshRequired="true">
      <description type="text/plain">Gets or sets the Style option.</description>
    </property>
    
    <!-- Common properties -->
    <property displayName="Data context" name="dataContext" datatype="String" category="Common Properties" isBrowsable="true" editor="HTML5Design.DesignInformation.ObservableDialogPropertyEditor">
      <description type="text/plain">Gets or sets the DataContext option.</description>
    </property>

    <!--Data-->
    <property displayName="Data array x variable name" name="dataArrayXVariableName" datatype="String" category="Data" isBrowsable="true"  editor="HTML5Design.DesignInformation.VariableNameDialogPropertyEditor"
      editorParameter="ItemDataTypeFilter:Numeric:ItemComplexFilter:Array:ItemAccessRightsFilter:Read,ReadWrite,ReadOnce">
      <description type="text/plain">Gets or sets DataArrayXVariableName option.</description>
    </property>
    <property displayName="Data array y variable name" name="dataArrayYVariableName" datatype="String" category="Data" isBrowsable="true"  editor="HTML5Design.DesignInformation.VariableNameDialogPropertyEditor"
