      <description type="text/plain">Gets or sets NullValue option.</description>
    </property>


    <!--Stroke-->
    <property displayName="Stroke width" name="strokeWidth" datatype="Number" category="Stroke" isBrowsable="true" >
      <description type="text/plain">Gets or sets StrokeWidth option.</description>
    </property>
    <property displayName="Stroke line join" name="strokeLineJoin" datatype="Lenze.Models.StrokeLineJoinEnum" category="Stroke" isBrowsable="true" >
      <description type="text/plain">Gets or sets StrokeLineJoin option.</description>
    </property>
    <property displayName="Stroke line cap" name="strokeLineCap" datatype="Lenze.Models.StrokeLineCapEnum" category="Stroke" isBrowsable="true" >
      <description type="text/plain">Gets or sets StrokeLineCap option.</description>
    </property>
    <property displayName="Stroke color" name="strokeColor" datatype="String" category="Stroke" isBrowsable="true" editor="HTML5Design.DesignInformation.ColorPropertyEditor" >
