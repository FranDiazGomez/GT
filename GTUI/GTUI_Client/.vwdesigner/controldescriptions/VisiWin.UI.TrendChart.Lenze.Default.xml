	<!-- Events -->
	<events>
		<event name="onInitialized"/>
		<event name="onAttached"/>
		<event name="onDetached"/>
		<event name="onVisibilityChanged"/>
	</events>

	<content>
		<![CDATA[
		<div data-win-control="VisiWin.UI.TrendChart" data-win-options="{style:'Custom.Default'}">
