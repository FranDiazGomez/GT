		</property>
		<property displayName="X axis ticks" name="xaxisTicks" datatype="Number" category="X Axis" isBrowsable="false">
			<description type="text/plain">Gets or sets the xaxisTicks option.</description>
		</property>
		<property displayName="X axis label width" name="xaxisLabelWidth" datatype="Number" category="X Axis" isBrowsable="true">
			<description type="text/plain">Specifies the label width for the x-axis.</description>
		</property>
		<property displayName="X axis label height" name="xaxisLabelHeight" datatype="Number" category="X Axis" isBrowsable="true">
			<description type="text/plain">Specifies the label height for the x-axis.</description>
		</property>
		<property displayName="X axis tick length" name="xaxisTickLength" datatype="Number" category="X Axis" isBrowsable="true">
