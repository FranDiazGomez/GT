		</property>-->
		<!--<property displayName="ZoomTrigger" name="zoomTrigger" datatype="String" category="Interactivity" isBrowsable="false">
			<description type="text/plain">Gets or sets the zoomTrigger option.</description>
		</property>-->
		<!--<property displayName="ZoomMouseAmount" name="zoomMouseAmount" datatype="Number" category="Interactivity" isBrowsable="true">
			<description type="text/plain">Gets or sets the zoomMouseAmount option.</description>
		</property>
		<property displayName="ZoomTouchAmount" name="zoomTouchAmount" datatype="Number" category="Interactivity" isBrowsable="true">
			<description type="text/plain">Gets or sets the zoomTouchAmount option.</description>
		</property>-->
		<property displayName="Pan interactive" name="panInteractive" datatype="Boolean" category="Interactivity" isBrowsable="true">
			<description type="text/plain">Gets or sets the panInteractive option.</description>
		</property>
		<property displayName="Pan cursor" name="panCursor" datatype="String" category="Interactivity" isBrowsable="true">
			<description type="text/plain">Gets or sets the panCursor option.</description>
		</property>
		<!--<property displayName="PanFrameRate" name="panFrameRate" datatype="Number" category="Interactivity" isBrowsable="false">
			<description type="text/plain">Gets or sets the panFrameRate option.</description>
		</property>
		<property displayName="PinchAmount" name="pinchAmount" datatype="Number" category="Interactivity" isBrowsable="false">
			<description type="text/plain">Gets or sets the pinchAmount option.</description>
		</property>-->


		<!-- Grid-Colors -->
		<property displayName="Background color" name="backgroundColor" datatype="String" category="Colors" isBrowsable="true" editor="HTML5Design.DesignInformation.ColorPropertyEditor">
