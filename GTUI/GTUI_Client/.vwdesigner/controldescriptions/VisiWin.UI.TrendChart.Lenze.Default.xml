		<!-- Common Properties -->
		<property displayName="Class names" name="classNames" datatype="String" category="Common Properties" isBrowsable="true">
			<description type="text/plain">Gets or sets the ClassNames option.</description>
		</property>
		<property displayName="Disabled" name="disabled" datatype="Boolean" category="Control States" isBrowsable="true">
			<description type="text/plain">Gets or sets Disabled option.</description>
		</property>

		<!-- TrendProvider -->
		<property displayName="Time span" name="timeSpan" datatype="Number" category="Trend Provider" isBrowsable="true">
			<description type="text/plain">Specifies the timeSpan in minutes.</description>
		</property>
		<!--<property displayName="MaxSamples" name="maxSamples" datatype="Number" category="TrendProvider" isBrowsable="true">
			<description type="text/plain">Gets or sets the maxSamples option.</description>
		</property>-->
		<property displayName="Trend online" name="trendOnline" datatype="Boolean" category="Trend Provider" isBrowsable="true">
			<description type="text/plain">Specifies whether the trend is online.</description>
		</property>
		<property displayName="Trend chart ID" name="trendChartID" datatype="String" category="Trend Provider"  refreshRequired="true" isBrowsable="true">
			<description type="text/plain">For the trend chart controller to identify the unique chart id.</description>
		</property>

		<!-- TrendChart -->
		<property displayName="Series" name="Series" datatype="VisiWin.UI.Series" category="Series" isBrowsable="true" isArray="true">
			<description type="text/plain">Gets or sets the Series option.</description>
		</property>
		<property displayName="Refresh rate" name="refreshRate" datatype="Number" category="Trend Chart" isBrowsable="false">
			<description type="text/plain">Gets or sets the refreshRate option in milliseconds.(default 1000ms.) </description>
		</property>

		<!-- xAxis -->
		<!--<property displayName="XAxis" name="xaxis" datatype="VisiWin.UI.TrendXAxis" category="XAxis" isBrowsable="true" isArray="false">
