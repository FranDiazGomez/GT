			<description type="text/plain">Gets or sets the xaxisTickDecimals option.</description>
		</property>-->
		<property displayName="Show X axis min max " name="showXAxisMinMax " datatype="Boolean" category="X Axis" isBrowsable="true">
			<description type="text/plain">Specifies whether the minimum and maximum values are displayed on the x-axis.</description>
		</property>
		<property displayName="X axis font size" name="xaxisFontSize" datatype="String" category="X Axis" isBrowsable="true" isAdvanced="true">
			<description type="text/plain">Specifies the size of the font on the x-axis(px).</description>
		</property>
		<property displayName="X axis font weight" name="xaxisFontWeight" datatype="String" category="X Axis" isBrowsable="true" isAdvanced="true">
			<description type="text/plain">Specifies the size of the font weight on the x-axis.</description>
		</property>
		<!-- Colors -->
		<property displayName="X axis font color" name="xaxisFontColor" datatype="String" category="X Axis" isBrowsable="true" editor="HTML5Design.DesignInformation.ColorPropertyEditor" isAdvanced="true">
			<description type="text/plain">Specifies the size of the font color on the x-axis.</description>
		</property>
		<property displayName="X axis tick color" name="xaxisTickColor" datatype="String" category="X Axis" isBrowsable="true" editor="HTML5Design.DesignInformation.ColorPropertyEditor">
			<description type="text/plain">Specifies the size of the tick color on the x-axis.</description>
		</property>
		
		<!--DateTime-->
		<property displayName="Date time mode" name="dateTimeMode" datatype="VisiWin.UI.DateTimeFormat" category="Date Time Format" isBrowsable="true">
			<description type="text/plain">Gets or sets the DateTimeMode option.</description>
		</property>
		<property displayName="Format date" name="formatDate" datatype="VisiWin.UI.DateFormat" category="Date Time Format" isBrowsable="true">
			<description type="text/plain">Gets or sets the FormatDate option.</description>
		</property>
		<property displayName="Format time" name="formatTime" datatype="VisiWin.UI.TimeFormat" category="Date Time Format" isBrowsable="true">
			<description type="text/plain">Gets or sets the FormatTime option.</description>
		</property>


		<!-- Grid -->
		<property displayName="Show grid" name="showGrid" datatype="Boolean" category="Grid" isBrowsable="true" refreshRequired="true">
			<description type="text/plain">Turn off the whole grid including tick labels by setting ShowGrid to false.</description>
		</property>
		<property displayName="Grid above data" name="gridAboveData" datatype="Boolean" category="Grid" isBrowsable="true">
			<description type="text/plain">AboveData determines whether the grid is drawn above the data or below (below is default).</description>
		</property>
		<property displayName="Grid margin" name="gridMargin" datatype="String" category="Grid" isBrowsable="true" editor="HTML5Design.DesignInformation.ThicknessPropertyEditor" refreshRequired="true" >
			<description type="text/plain">Specifies the grid margin.</description>
		</property>
		<property displayName="Axis value margin" name="axisValueMargin" datatype="Number" category="Grid" isBrowsable="true">
			<description type="text/plain">Specifies the label margin as the space in pixels between tick labels and axis line.</description>
		</property>
		<property displayName="Y axis margin" name="yAxisMargin" datatype="Number" category="Grid" isBrowsable="true">
			<description type="text/plain">Specifies the grid axis margin is the space in pixels between axes when there are two next to each other.</description>
		</property>
		<property displayName="Grid border width" name="gridBorderWidth" datatype="Number" category="Grid" isBrowsable="true">
			<description type="text/plain">BorderWidth" is the width of the border around the plot. Set it to 0 to disable the border.</description>
		</property>
		<property displayName="Grid minor ticks" name="gridMinorTicks" datatype="Number" category="Grid" isBrowsable="true">
			<description type="text/plain">Specifies the grid minor ticks.</description>
		</property>
		<property displayName="Grid minor ticks width" name="gridMinorTicksWidth" datatype="Number" category="Grid" isBrowsable="true">
			<description type="text/plain">Gets or sets the gridMinorTicksWidth option.</description>
		</property>

