<?xml version="1.0" encoding="utf-8"?>
<control version="7.3" spec="1.0" runtimeType="VisiWin.UI.Spacer" style="Custom.Default" name="VisiWin.UI.Spacer.Custom.Default">
  <author name="Custom" />
  <title type="text/plain">Spacer</title>
  <description type="text/plain">Spacer</description>
  <properties>
    <!-- Layout -->
    <property displayName="Width" name="width" datatype="String" category="Layout" isBrowsable="true" editor="HTML5Design.DesignInformation.SizePropertyEditor" editorParameter="WidthUnits">
      <description type="text/plain">Gets or sets the Width option.</description>
    </property>
    <property displayName="Min width" name="minWidth" datatype="String" category="Layout" isBrowsable="false" isAdvanced="false" editor="HTML5Design.DesignInformation.SizePropertyEditor" editorParameter="MinWidthUnits">
      <description type="text/plain">Gets or sets the MinWidth option.</description>
    </property>
    <property displayName="Max width" name="maxWidth" datatype="String" category="Layout" isBrowsable="false" isAdvanced="false" editor="HTML5Design.DesignInformation.SizePropertyEditor" editorParameter="MaxWidthUnits">
      <description type="text/plain">Gets or sets the MaxWidth option.</description>
    </property>
    <property displayName="Height" name="height" datatype="String" category="Layout" isBrowsable="true" editor="HTML5Design.DesignInformation.SizePropertyEditor" editorParameter="HeightUnits">
      <description type="text/plain">Gets or sets the Height option.</description>
    </property>
    <property displayName="Min height" name="minHeight" datatype="String" category="Layout" isBrowsable="false" isAdvanced="false" editor="HTML5Design.DesignInformation.SizePropertyEditor" editorParameter="MinHeightUnits">
      <description type="text/plain">Gets or sets the MinHeight option.</description>
    </property>
    <property displayName="Max height" name="maxHeight" datatype="String" category="Layout" isBrowsable="false" isAdvanced="false" editor="HTML5Design.DesignInformation.SizePropertyEditor" editorParameter="MaxHeightUnits">
      <description type="text/plain">Gets or sets the MaxHeight option.</description>
    </property>
    <property displayName="Padding" name="padding" datatype="String" category="Layout" isBrowsable="false" isAdvanced="false" editor="HTML5Design.DesignInformation.ThicknessPropertyEditor">
      <description type="text/plain">Gets or sets the Padding option.</description>
    </property>

    <!-- Appearance -->
    <property displayName="Opacity" name="opacity" datatype="Number" category="Appearance" isBrowsable="false">
      <description type="text/plain">Gets or sets the Opacity option.</description>
    </property>
    <property displayName="Visibility" name="visibility" datatype="VisiWin.UI.Visibility" category="Appearance" isBrowsable="false">
      <description type="text/plain">Gets or sets the Visibility option.</description>
    </property>
    <property displayName="Shadow" name="shadow" datatype="String" category="Appearance" isBrowsable="false" editor="HTML5Design.DesignInformation.ShadowPropertyEditor">
      <description type="text/plain">Gets or sets the Shadow option.</description>
    </property>
    <property displayName="Background" name="background" datatype="String" category="Appearance" isBrowsable="false" editor="HTML5Design.DesignInformation.ColorPropertyEditor" editorParameter="background">
      <description type="text/plain">Gets or sets the Background option.</description>
    </property>
    <property displayName="Style" name="style" datatype="String" category="Appearance" isBrowsable="true" editor="HTML5Design.DesignInformation.StylePropertyEditor" refreshRequired="true">
      <description type="text/plain">Gets or sets the Style option.</description>
    </property>

  <!-- Common Properties -->
    <property displayName="Class names" name="classNames" datatype="String" category="Common Properties" isBrowsable="true">
      <description type="text/plain">Gets or sets the ClassNames option.</description>
    </property>
    <property displayName="Data context" name="dataContext" datatype="String" category="Common Properties" isBrowsable="true" editor="HTML5Design.DesignInformation.ObservableDialogPropertyEditor">
			<description type="text/plain">Gets or sets the DataContext option.</description>
		</property>
    
    <!-- Colors -->
    <property displayName="Background color" name="backgroundColor" datatype="String" category="Colors" isBrowsable="true" editor="HTML5Design.DesignInformation.ColorPropertyEditor">
      <description type="text/plain">Gets or sets the BackgroundColor option.</description>
    </property>
  </properties>

  <events>
    <event name="onInitialized"/>
    <event name="onAttached"/>
    <event name="onDetached"/>
    <event name="onVisibilityChanged"/>
  </events>

  <content><![CDATA[<hr data-win-control="VisiWin.UI.Spacer" data-win-options="{style:'Custom.Default'}">]]></content>
</control>
