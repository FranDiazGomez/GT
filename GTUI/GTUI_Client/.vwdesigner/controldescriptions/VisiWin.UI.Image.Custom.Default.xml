<?xml version="1.0" encoding="utf-8"?>
<control version="7.3" spec="1.0" runtimeType="VisiWin.UI.Image" style="Custom.Default" name="VisiWin.UI.Image.Custom.Default">
  <author name="Custom" />
  <title type="text/plain">Image</title>
  <description type="text/plain">A Image control.</description>
  <properties>
    <!-- Layout -->
    <property displayName="Width" name="width" datatype="String" category="Layout" isBrowsable="true" editor="HTML5Design.DesignInformation.SizePropertyEditor" editorParameter="WidthUnits">
      <description type="text/plain">Gets or sets the Width option.</description>
    </property>
    <property displayName="Min width" name="minWidth" datatype="String" category="Layout" isBrowsable="false" isAdvanced="false" editor="HTML5Design.DesignInformation.SizePropertyEditor" editorParameter="MinWidthUnits">
      <description type="text/plain">Gets or sets the MinWidth option.</description>
    </property>
    <property displayName="Max width" name="maxWidth" datatype="String" category="Layout" isBrowsable="false" isAdvanced="false" editor="HTML5Design.DesignInformation.SizePropertyEditor" editorParameter="MaxWidthUnits">
      <description type="text/plain">Gets or sets the MaxWidth option.</description>
    </property>
    <property displayName="Height" name="height" datatype="String" category="Layout" isBrowsable="true" editor="HTML5Design.DesignInformation.SizePropertyEditor" editorParameter="HeightUnits">
      <description type="text/plain">Gets or sets the Height option.</description>
    </property>
    <property displayName="Min height" name="minHeight" datatype="String" category="Layout" isBrowsable="false" isAdvanced="false" editor="HTML5Design.DesignInformation.SizePropertyEditor" editorParameter="MinHeightUnits">
      <description type="text/plain">Gets or sets the MinHeight option.</description>
    </property>
    <property displayName="Max height" name="maxHeight" datatype="String" category="Layout" isBrowsable="false" isAdvanced="false" editor="HTML5Design.DesignInformation.SizePropertyEditor" editorParameter="MaxHeightUnits">
      <description type="text/plain">Gets or sets the MaxHeight option.</description>
    </property>
    <property displayName="Padding" name="padding" datatype="String" category="Layout" isBrowsable="false" isAdvanced="false" editor="HTML5Design.DesignInformation.ThicknessPropertyEditor">
      <description type="text/plain">Gets or sets the Padding option.</description>
    </property>

    <!-- Appearance -->
    <property displayName="Border width" name="borderWidth" datatype="String" category="Appearance" isBrowsable="false" editor="HTML5Design.DesignInformation.ThicknessPropertyEditor">
      <description type="text/plain">Gets or sets the BorderWidth option.</description>
    </property>
    <property displayName="Border style" name="borderStyle" datatype="VisiWin.UI.Border.Style" category="Appearance" isBrowsable="false">
      <description type="text/plain">Gets or sets the BorderStyle option.</description>
    </property>
    <property displayName="Border radius" name="borderRadius" datatype="String" category="Appearance" isBrowsable="false" editor="HTML5Design.DesignInformation.ThicknessPropertyEditor">
      <description type="text/plain">Gets or sets the BorderRadius option.</description>
    </property>
    <property displayName="Opacity" name="opacity" datatype="Number" category="Appearance" isBrowsable="false">
      <description type="text/plain">Gets or sets the Opacity option.</description>
    </property>
    <property displayName="Visibility" name="visibility" datatype="VisiWin.UI.Visibility" category="Appearance" isBrowsable="true">
      <description type="text/plain">Gets or sets the Visibility option.</description>
    </property>
    <property displayName="Shadow" name="shadow" datatype="String" category="Appearance" isBrowsable="false" editor="HTML5Design.DesignInformation.ShadowPropertyEditor">
      <description type="text/plain">Gets or sets the Shadow option.</description>
    </property>
    <property displayName="Background" name="background" datatype="String" category="Appearance" isBrowsable="false" editor="HTML5Design.DesignInformation.ColorPropertyEditor" editorParameter="background">
      <description type="text/plain">Gets or sets the Background option.</description>
    </property>
    <property displayName="Style" name="style" datatype="String" category="Appearance" isBrowsable="true" editor="HTML5Design.DesignInformation.StylePropertyEditor" refreshRequired="true">
      <description type="text/plain">Gets or sets the Style option.</description>
    </property>

    <!-- Variable -->
    <property displayName="Variable name" name="variableName" datatype="String" category="Variable" isBrowsable="true" editor="HTML5Design.DesignInformation.VariableNameDialogPropertyEditor" 
    editorParameter="ItemDataTypeFilter:Numeric,VT_Bstr">
      <description type="text/plain">Gets or sets the VariableName option.</description>
    </property>
    <property displayName="Value" name="value" datatype="String" category="Variable" isBrowsable="true">
      <description type="text/plain">Gets or sets the Value option.</description>
    </property>
    <property displayName="Bit number" name="bitNumber" datatype="Number" category="Variable" isBrowsable="true" isInteger="true">
      <description type="text/plain">Gets or sets the BitNumber option.</description>
    </property>

    <!-- Common Properties -->
    <property displayName="Class names" name="classNames" datatype="String" category="Common Properties" isBrowsable="true">
      <description type="text/plain">Gets or sets the ClassNames option.</description>
    </property>
    <property displayName="Disabled" name="disabled" datatype="Boolean" category="Control States" isBrowsable="true">
      <description type="text/plain">Gets or sets Disabled option.</description>
    </property>
       <property displayName="Data context" name="dataContext" datatype="String" category="Common Properties" isBrowsable="true" editor="HTML5Design.DesignInformation.ObservableDialogPropertyEditor">
			<description type="text/plain">Gets or sets the DataContext option.</description>
		</property>

     <!-- Image -->
    <property displayName="Icon font" name="iconFont" datatype="String" category="Image" isBrowsable="true" editor="HTML5Design.DesignInformation.IconFontPropertyEditor">
      <description type="text/plain">Gets or sets the IconFont option.</description>
    </property>
    <property displayName="Image" name="image" datatype="String" category="Image" isBrowsable="true" editor="HTML5Design.DesignInformation.SymbolPropertyEditor">
      <description type="text/plain">Gets or sets the Image option.</description>
    </property>
    <property displayName="Image type" name="imageType" datatype="VisiWin.UI.Symbol.Type" category="Image" isBrowsable="true">
      <description type="text/plain">Gets or sets the ImageType option.</description>
    </property>
    <property displayName="Image size" name="imageSize" datatype="String" category="Image" isBrowsable="true">
      <description type="text/plain">Gets or sets the ImageSize option.</description>
    </property>
    <property displayName="Image list" name="imageList" isArray="True" datatype="VisiWin.UI.ImageState.Custom.Default" category="Image" isBrowsable="true">
      <description type="text/plain">Gets or sets the ImageList option.</description>
    </property>

    <!-- Authorization -->
    <property displayName="Authorization mode" name="authorizationMode" datatype="VisiWin.UI.Authorization.Mode" category="Authorization" isBrowsable="true">
      <description type="text/plain">Gets or sets the AuthorizationMode option.</description>
    </property>
    <property displayName="Authorization right" name="authorizationRight" datatype="String" category="Authorization" isBrowsable="true" editor="HTML5Design.DesignInformation.RightDialogPropertyEditor">
      <description type="text/plain">Gets or sets the AuthorizationRight option.</description>
    </property>
    <property displayName="Authorized (design time)" name="authorized" datatype="Boolean" category="Control States" isBrowsable="false" shouldSerialize="false">
      <description type="text/plain">Gets or sets the Authorized option.</description>
    </property>

    <!-- Colors -->
    <property displayName="Background color" name="backgroundColor" datatype="String" category="Colors" isBrowsable="true" editor="HTML5Design.DesignInformation.ColorPropertyEditor">
      <description type="text/plain">Gets or sets the BackgroundColor option.</description>
    </property>
    <property displayName="Foreground color" name="foregroundColor" datatype="String" category="Colors" isBrowsable="true" editor="HTML5Design.DesignInformation.ColorPropertyEditor">
      <description type="text/plain">Gets or sets the ForegroundColor option.</description>
    </property>
    <property displayName="Border color" name="borderColor" datatype="String" category="Colors" isBrowsable="true" editor="HTML5Design.DesignInformation.ColorPropertyEditor">
      <description type="text/plain">Gets or sets the BorderColor option.</description>
    </property>
    <property displayName="Disabled background color" name="disabledBackgroundColor" datatype="String" category="Colors" isBrowsable="false" editor="HTML5Design.DesignInformation.ColorPropertyEditor">
      <description type="text/plain">Gets or sets the DisabledBackgroundColor option.</description>
    </property>
    <property displayName="Disabled foreground color" name="disabledForegroundColor" datatype="String" category="Colors" isBrowsable="false" editor="HTML5Design.DesignInformation.ColorPropertyEditor">
      <description type="text/plain">Gets or sets the DisabledForegroundColor option.</description>
    </property>
    <property displayName="Disabled border color" name="disabledBorderColor" datatype="String" category="Colors" isBrowsable="false" editor="HTML5Design.DesignInformation.ColorPropertyEditor">
      <description type="text/plain">Gets or sets the DisabledBorderColor option.</description>
    </property>
  </properties>

  <!-- Events -->
  <events>
    <event name="onAttached"/>
    <event name="onDetached"/>
    <event name="onVisibilityChanged"/>
    <event name="onDisabledChanged"/>
    
    <event name="onClick"/>
		<event name="onDown"/>
		<event name="onUp"/>
  </events>

  <content>
    <![CDATA[
      <div data-win-control="VisiWin.UI.Image" data-win-options="{style:'Custom.Default'}">
        <div data-win-control="VisiWin.UI.ImageState" data-win-options="{style:'Custom.Default'}"></div>
      </div>
    ]]>
  </content>
</control>
