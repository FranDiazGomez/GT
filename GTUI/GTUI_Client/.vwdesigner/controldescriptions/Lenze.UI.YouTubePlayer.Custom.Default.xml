<?xml version="1.0" encoding="utf-8"?>
<control version="7.3" spec="1.0" runtimeType="Lenze.UI.YouTubePlayer" style="Custom.Default" name="Lenze.UI.YouTubePlayer.Custom.Default">
  <author name="Custom" />
  <title type="text/plain">YouTubePlayer</title>
  <description type="text/plain">Control for integration of a YouTubePlayer.</description>
  <properties>

    <!-- Layout -->
    <property displayName="Width" name="width" datatype="String" category="Layout" isBrowsable="true" editor="HTML5Design.DesignInformation.SizePropertyEditor" editorParameter="WidthUnits">
      <description type="text/plain">Gets or sets the Width option.</description>
    </property>
    <property displayName="Min width" name="minWidth" datatype="String" category="Layout" isBrowsable="false" editor="HTML5Design.DesignInformation.SizePropertyEditor" editorParameter="MinWidthUnits">
      <description type="text/plain">Gets or sets the MinWidth option.</description>
    </property>
    <property displayName="Max width" name="maxWidth" datatype="String" category="Layout" isBrowsable="false" editor="HTML5Design.DesignInformation.SizePropertyEditor" editorParameter="MaxWidthUnits">
      <description type="text/plain">Gets or sets the MaxWidth option.</description>
    </property>
    <property displayName="Height" name="height" datatype="String" category="Layout" isBrowsable="true" editor="HTML5Design.DesignInformation.SizePropertyEditor" editorParameter="HeightUnits">
      <description type="text/plain">Gets or sets the Height option.</description>
    </property>
    <property displayName="Min height" name="minHeight" datatype="String" category="Layout" isBrowsable="false" editor="HTML5Design.DesignInformation.SizePropertyEditor" editorParameter="MinHeightUnits">
      <description type="text/plain">Gets or sets the MinHeight option.</description>
    </property>
    <property displayName="Max height" name="maxHeight" datatype="String" category="Layout" isBrowsable="false" editor="HTML5Design.DesignInformation.SizePropertyEditor" editorParameter="MaxHeightUnits">
      <description type="text/plain">Gets or sets the MaxHeight option.</description>
    </property>
    <property displayName="Padding" name="padding" datatype="String" category="Layout" isBrowsable="false" editor="HTML5Design.DesignInformation.ThicknessPropertyEditor">
      <description type="text/plain">Gets or sets the Padding option.</description>
    </property>


    <!-- Appearance -->
    <property displayName="Border width" name="borderWidth" datatype="String" category="Appearance" isBrowsable="false" editor="HTML5Design.DesignInformation.ThicknessPropertyEditor">
      <description type="text/plain">Gets or sets the BorderWidth option.</description>
    </property>
    <property displayName="Border style" name="borderStyle" datatype="VisiWin.UI.Border.Style" category="Appearance" isBrowsable="false">
      <description type="text/plain">Gets or sets the BorderStyle option.</description>
    </property>
    <property displayName="Border radius" name="borderRadius" datatype="String" category="Appearance" isBrowsable="false" editor="HTML5Design.DesignInformation.ThicknessPropertyEditor">
      <description type="text/plain">Gets or sets the BorderRadius option.</description>
    </property>
    <property displayName="Opacity" name="opacity" datatype="Number" category="Appearance" isBrowsable="false">
      <description type="text/plain">Gets or sets the Opacity option.</description>
    </property>
    <property displayName="Visibility" name="visibility" datatype="VisiWin.UI.Visibility" category="Appearance" isBrowsable="true">
      <description type="text/plain">Gets or sets the Visibility option.</description>
    </property>
    <property displayName="Shadow" name="shadow" datatype="String" category="Appearance" isBrowsable="false" editor="HTML5Design.DesignInformation.ShadowPropertyEditor">
      <description type="text/plain">Gets or sets the Shadow option.</description>
    </property>
    <property displayName="Background" name="background" datatype="String" category="Appearance" isBrowsable="false" editor="HTML5Design.DesignInformation.ColorPropertyEditor" editorParameter="background">
      <description type="text/plain">Gets or sets the Background option.</description>
    </property>
    <property displayName="Style" name="style" datatype="String" category="Appearance" isBrowsable="true" editor="HTML5Design.DesignInformation.StylePropertyEditor" refreshRequired="true">
      <description type="text/plain">Gets or sets the Style option.</description>
    </property>

    <!-- Common properties -->
    <property displayName="Data context" name="dataContext" datatype="String" category="Common Properties" isBrowsable="true" editor="HTML5Design.DesignInformation.ObservableDialogPropertyEditor">
	  <description type="text/plain">Gets or sets the DataContext option.</description>
	  </property>

    <!-- Watch -->
    <property displayName="Watch code" name="watchCode" datatype="String" category="Source" isBrowsable="true" >
      <description type="text/plain">Gets or sets the WatchCode option.</description>
    </property>

    <!-- Colors -->
    <property displayName="Background color" name="backgroundColor" datatype="String" category="Colors" isBrowsable="true" editor="HTML5Design.DesignInformation.ColorPropertyEditor">
      <description type="text/plain">Gets or sets the BackgroundColor option.</description>
    </property>
  </properties>

  <events>
    <event name="onInitialized"/>
    <event name="onAttached"/>
    <event name="onDetached"/>
    <event name="onHoverChanged"/>
    <event name="onVisibilityChanged"/>
    <event name="onDisabledChanged"/>
    <event name="onClick"/>
	  <event name="onDown"/>
	  <event name="onUp"/>
  </events>

  <content><![CDATA[<div data-win-control="Lenze.UI.YouTubePlayer" data-win-options="{style:'Custom.Default'}"></div>]]></content>
</control>
