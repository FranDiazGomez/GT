<?xml version="1.0" encoding="utf-8"?>
<control version="7.3" spec="1.0" runtimeType="Lenze.UI.VirtualizingTableColumn" style="Custom.Default" name="Lenze.UI.VirtualizingTableColumn.Custom.Default">
  <author name="Custom" />
  <title type="text/plain">VirtualizingTableColumn</title>
  <description type="text/plain">VirtualizingTableColumn</description>
  <properties>
    
    <!-- Appearance -->
    <property displayName="Visible" name="visible" datatype="Boolean" category="Appearance" isBrowsable="true">
      <description type="text/plain">Gets or sets Visible option.</description>
		</property>

      <!-- Appearance -->
	<property displayName="Style" name="style" datatype="String" category="Appearance" isBrowsable="true" editor="HTML5Design.DesignInformation.StylePropertyEditor" refreshRequired="true">
      <description type="text/plain">Gets or sets the Style option.</description>
    </property>
    
    <!-- Layout -->
    <property displayName="Width" name="width" datatype="String" category="Layout" isBrowsable="true" editor="HTML5Design.DesignInformation.SizePropertyEditor" editorParameter="WidthUnits">
      <description type="text/plain">Gets or sets the Width option.</description>
    </property>

    <!-- Text -->
    <property displayName="Localizable text" name="localizableText" datatype="String" category="Text" isBrowsable="true" editor="HTML5Design.DesignInformation.TextDialogPropertyEditor">
      <description type="text/plain">Gets or sets LocalizableText option.</description>
    </property>
    <property displayName="Default text" name="defaultText" datatype="String" category="Text" isBrowsable="true" >
      <description type="text/plain">Gets or sets DefaultText option.</description>
    </property>
    <property displayName="Line clamp" name="lineClamp" datatype="Number" category="Text" isBrowsable="true" isInteger="true">
      <description type="text/plain">Defines the number of visible lines.</description>
    </property>
    <property displayName="Text wrapping" name="textWrapping" datatype="VisiWin.UI.Text.Wrapping" category="Text" isBrowsable="true">
      <description type="text/plain">Defines if the lines should break automatically.</description>
    </property>
    <property displayName="Text trimming" name="textTrimming" datatype="VisiWin.UI.Text.Trimming" category="Text" isBrowsable="true">
      <description type="text/plain">Gets or sets the TextTrimming option.</description>
    </property>


    <!-- Symbol -->
    <property displayName="Icon font" name="iconFont" datatype="String" category="Symbol" isBrowsable="true" editor="HTML5Design.DesignInformation.IconFontPropertyEditor">
      <description type="text/plain">Gets or sets the IconFont option.</description>
    </property>
    <property displayName="Symbol" name="symbol" datatype="String" category="Symbol" isBrowsable="true" editor="HTML5Design.DesignInformation.SymbolPropertyEditor">
      <description type="text/plain">Gets or sets the Symbol option.</description>
    </property>
    <property displayName="Symbol type" name="symbolType" datatype="VisiWin.UI.Symbol.Type" category="Symbol" isBrowsable="true">
      <description type="text/plain">Gets or sets the SymbolType option.</description>
    </property>
    <property displayName="Symbol size" name="symbolSize" datatype="String" category="Symbol" isBrowsable="true">
      <description type="text/plain">Gets or sets the SymbolSize option.</description>
    </property>
    <property displayName="Symbol active foreground color" name="symbolActiveForegroundColor" datatype="String" category="Symbol" isBrowsable="false" editor="HTML5Design.DesignInformation.ColorPropertyEditor">
      <description type="text/plain">Gets or sets the SymbolActiveForegroundColor option.</description>
    </property>
    <property displayName="Symbol inactive foreground color" name="symbolInactiveForegroundColor" datatype="String" category="Symbol" isBrowsable="false" editor="HTML5Design.DesignInformation.ColorPropertyEditor">
      <description type="text/plain">Gets or sets the SymbolInactiveForegroundColor option.</description>
    </property>
    <property displayName="Symbol background color" name="symbolBackgroundColor" datatype="String" category="Symbol" isBrowsable="false" editor="HTML5Design.DesignInformation.ColorPropertyEditor">
      <description type="text/plain">Gets or sets the SymbolBackgroundColor option.</description>
    </property>
    
    <!-- Data -->
    <property displayName="Field name" name="fieldName" datatype="String" category="Data" isBrowsable="true" >
      <description type="text/plain">Gets or sets FieldName option.</description>
    </property>
    <property displayName="Order by enabled" name="orderByEnabled" datatype="Boolean" category="Data" isBrowsable="true" >
      <description type="text/plain">Gets or sets OrderByEnabled option.</description>
    </property>
	 <property displayName="Data context" name="dataContext" datatype="String" category="Data" isBrowsable="true" editor="HTML5Design.DesignInformation.ObservableDialogPropertyEditor">
	  <description type="text/plain">Gets or sets the DataContext option.</description>
	  </property>

  </properties>

  <events>
    <event name="onInitialized"/>
    <event name="onAttached"/>
    <event name="onDetached"/>
    <event name="onHoverChanged"/>
    <event name="onVisibilityChanged"/>
    <event name="onDisabledChanged"/>
  </events>

  <content><![CDATA[<div data-win-control="Lenze.UI.VirtualizingTableColumn" data-win-options="{style:'Custom.Default'}"></div>]]></content>
</control>
