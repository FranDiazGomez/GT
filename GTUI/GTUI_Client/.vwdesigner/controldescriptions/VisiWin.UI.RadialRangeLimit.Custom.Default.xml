<?xml version="1.0" encoding="utf-8"?>
<control version="7.3" spec="1.0" runtimeType="VisiWin.UI.RadialRangeLimit" style="Custom.Default" name="VisiWin.UI.RadialRangeLimit.Custom.Default">
  <author name="Custom" />
  <title type="text/plain">RadialRangeLimit</title>
  <description type="text/plain">A RadialRangeLimit control.</description>
  <properties>
    <!-- Value -->
    <property displayName="Start value" name="startValue" datatype="Number" category="Value" isBrowsable="true">
      <description type="text/plain">Gets or sets the StartValue option.</description>
    </property>
    <property displayName="End value" name="endValue" datatype="Number" category="Value" isBrowsable="true">
      <description type="text/plain">Gets or sets the EndValue option.</description>
    </property>

    <!-- Common Properties -->
    <property displayName="Data context" name="dataContext" datatype="String" category="Common Properties" isBrowsable="true" editor="HTML5Design.DesignInformation.ObservableDialogPropertyEditor">
			<description type="text/plain">Gets or sets the DataContext option.</description>
		</property>

      <!-- Appearance -->
	<property displayName="Style" name="style" datatype="String" category="Appearance" isBrowsable="true" editor="HTML5Design.DesignInformation.StylePropertyEditor" refreshRequired="true">
      <description type="text/plain">Gets or sets the Style option.</description>
    </property>

    <!-- Radius -->
    <property displayName="Inner radius" name="innerRadius" datatype="String" category="Radius" isBrowsable="false">
      <description type="text/plain">Gets or sets the InnerRadius option.</description>
    </property>
    <property displayName="Outer radius" name="outerRadius" datatype="String" category="Radius" isBrowsable="false">
      <description type="text/plain">Gets or sets the OuterRadius option.</description>
    </property>

    <!-- Colors -->
    <property displayName="Fill color" name="fillColor" datatype="String" category="Colors" isBrowsable="true" editor="HTML5Design.DesignInformation.ColorPropertyEditor">
      <description type="text/plain">Gets or sets the FillColor option.</description>
    </property>
  </properties>

  <content>
    <![CDATA[<div data-win-control="VisiWin.UI.RadialRangeLimit" data-win-options="{style:'Custom.Default'}"></div>]]>
  </content>
</control>
